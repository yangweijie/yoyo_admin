<?xml version="1.0" encoding="UTF-8"?>
<modification
    xmlns="https://github.com/vqmod/vqmod"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://github.com/vqmod/vqmod https://raw.githubusercontent.com/vqmod/vqmod/master/vqmod.xsd">
    >
	<id>Compacity php8.2 mb_convert_encoding</id>
	<version>1.0</version>
	<vqmver>2.X</vqmver>
	<author>yangweijei</author>
	<file name="vendor/clickfwd/yoyo/src/yoyo/YoyoCompiler.php">
		<operation info="mb_convert_encoding fix">
			<search position="replace"><![CDATA[
			$html = mb_convert_encoding($html, 'HTML-ENTITIES', 'UTF-8');
			]]></search>
			<add><![CDATA[
		$html = htmlspecialchars_decode(htmlentities_and_chinese($html, ENT_COMPAT, 'UTF-8'));
			]]></add>
		</operation>
	</file>
</modification>